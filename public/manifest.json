{
  "short_name": "TV Wizard",
  "name": "TV Wizard",
  "description": "Find the best TV shows tailored to you.",
  "manifest_version": 2,
  "version": "0.0.1",
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },

  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Open popup"
  },

  "permissions": [
    "contextMenus",
    "tabs",
    "storage",
    "activeTab"
  ],

  "content_security_policy": "script-src 'self' 'sha256-+x6khJBk0aFizh/16MKthDCIHmzb4ydS7Q5jgVBapNc=' 'unsafe-eval'; object-src 'self'"
}
